@model DiscordClone.Models.FriendString
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Friends - Discord Clone</title>
    <style>
 
    </style>
</head>
<body>
    <div class="friends-page-container">
        <!-- Header -->
        <div class="friends-page-header">
            <h1 class="friends-page-title">Friends</h1>
        </div>

        <!-- Main Content -->
        <div class="friends-page-content">
            <!-- Add Friend Section -->
            <div class="friends-section">
                <div class="friends-section-title">Add Friend</div>
                <div class="friends-add-card">
                    <div class="friends-add-title">ADD FRIEND</div>
                    <div class="friends-add-hint">You can add friends with their Discord username.</div>
                    <form asp-action="AddFriendForm" asp-controller="Discord" class="friends-add-form">
                        <input asp-for="Name" type="text" class="friends-add-input" placeholder="Enter username#1234" />
                        <button type="submit" class="friends-btn-send">Send Request</button>
                    </form>
                </div>
            </div>

            <!-- Pending Requests Section -->
            <div class="friends-section">
                <div class="friends-section-title">Pending — @(ViewBag.PendingFriends?.Count ?? 0)</div>

                @if (ViewBag.PendingFriends != null && ViewBag.PendingFriends.Count > 0)
                {
                    <div class="friends-pending-list">
                        @foreach (var request in ViewBag.PendingFriends)
                        {
                            <div class="friends-request-card">
                                <div class="friends-request-info">
                                    <div class="friends-request-avatar">@request.Username.Substring(0, 1).ToUpper()</div>
                                    <div class="friends-request-details">
                                        <span class="friends-request-name">@request.Username</span>
                                        <span class="friends-request-tag">Incoming Friend Request</span>
                                    </div>
                                </div>
                                <div class="friends-request-actions">
                                    <a asp-action="AcceptFriendship" asp-route-id="@request.Id" class="friends-btn friends-btn-accept">Accept</a>
                                    <a asp-action="Index" class="friends-btn friends-btn-ignore">Ignore</a>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="friends-empty-state">
                        <p class="friends-empty-text">No pending friend requests</p>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>