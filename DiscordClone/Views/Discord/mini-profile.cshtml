<!-- MINI PROFILE COMPONENT HTML (_mini-profile.cshtml) -->
<div class="mini-profile">
    <div class="mini-profile-avatar">
        @if (!string.IsNullOrEmpty(ViewBag.UserProfile.AvatarURL))
        {
            <img src="@ViewBag.UserProfile.AvatarURL" alt="@ViewBag.UserProfile.Username">
        }
        else
        {
            @ViewBag.UserProfile.Username.Substring(0, 1).ToUpper()
        }
        <span id="ActivityStatus" class="mini-profile-status-indicator offline"></span>
    </div>

    <div class="mini-profile-info">
        <p class="mini-profile-name">@ViewBag.UserProfile.Username</p>
        <p class="mini-profile-status-text">@ViewBag.UserProfile.Username#@ViewBag.UserProfile.Tag</p>
    </div>

    <div class="mini-profile-actions">

        <a asp-controller="Discord" asp-action="UserProfile" class="mini-profile-btn" title="User Settings">
            <i class="fa-solid fa-gear"></i>
        </a>
    </div>
</div>

