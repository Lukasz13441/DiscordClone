<style>
    /* =============================== */
    /*   MINI PROFILE COMPONENT        */
    /* =============================== */

    .mini-profile {
        padding: 8px;
        background: #232428;
        border-top: 1px solid #1e1f22;
        display: flex;
        align-items: center;
        gap: 8px;
        min-height: 52px;
        max-height: 52px;
        flex-shrink: 0;
        width: 100%;
    }

    .mini-profile-avatar {
        width: 32px;
        height: 32px;
        min-width: 32px;
        border-radius: 50%;
        background: #5865f2;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 14px;
        color: #fff;
        flex-shrink: 0;
        position: relative;
    }

        .mini-profile-avatar img {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            object-fit: cover;
        }

    /* Status Indicator */
    .mini-profile-status-indicator {
        position: absolute;
        bottom: -2px;
        right: -2px;
        width: 10px;
        height: 10px;
        border-radius: 50%;
        border: 2px solid #232428;
        background: #23a55a;
    }

        /* Different status colors */
        .mini-profile-status-indicator.online {
            background: #23a55a;
        }

        .mini-profile-status-indicator.idle {
            background: #f0b232;
        }

        .mini-profile-status-indicator.dnd {
            background: #f23f42;
        }

        .mini-profile-status-indicator.offline {
            background: #80848e;
        }

    .mini-profile-info {
        flex: 1;
        min-width: 0;
        display: flex;
        flex-direction: column;
        gap: 2px;
    }

    .mini-profile-name {
        font-size: 14px;
        font-weight: 600;
        color: #f2f3f5;
        margin: 0;
        line-height: 1.2;
        text-overflow: ellipsis;
        overflow: hidden;
        white-space: nowrap;
    }

    .mini-profile-status-text {
        font-size: 12px;
        color: #80848e;
        margin: 0;
        line-height: 1.2;
        text-overflow: ellipsis;
        overflow: hidden;
        white-space: nowrap;
    }

    .mini-profile-actions {
        display: flex;
        gap: 4px;
        flex-shrink: 0;
    }

    .mini-profile-btn {
        width: 32px;
        height: 32px;
        min-width: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 4px;
        background: transparent;
        border: none;
        color: #b5bac1;
        cursor: pointer;
        transition: all 0.15s ease;
        text-decoration: none;
    }

        .mini-profile-btn:hover {
            background: #35373c;
            color: #f2f3f5;
        }

        .mini-profile-btn i {
            font-size: 16px;
        }
</style>