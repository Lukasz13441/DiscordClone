@model List<Server>
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Discord – Friends Online</title>

    <!-- Bootstrap -->

    <style>
        body { background-color:#2f3136; color:#fff; }
        .friend-list { 
            width:350px; 
            background:#202225; 
            padding:20px; 
            border-radius:10px; 
        }
        .friend {
            display:flex;
            align-items:center;
            padding:10px;
            margin-bottom:10px;
            border-radius:8px;
            transition:0.2s;
        }
        .friend:hover { background:#36393f; cursor:pointer; }
        .avatar {
            width:45px; height:45px;
            border-radius:50%;
            margin-right:12px;
        }
        .username { font-weight:bold; font-size:1.1rem; display:block; }
        .status { font-size:.9rem; opacity:.8; }
    </style>
</head>

<body class="d-flex justify-content-center align-items-center vh-100">

    <div class="friend-list shadow">

        <div class="friend">
            <img src="https://i.pravatar.cc/40?img=3" class="avatar" />
            <div>
                <span class="username">arczi333</span>
                <span class="status">🟢 Na kanale głosowym</span>
            </div>
        </div>

        <div class="friend">
            <img src="https://i.pravatar.cc/40?img=4" class="avatar" />
            <div>
                <span class="username">Azgir</span>
                <span class="status">🟡 Zaraz wracam</span>
            </div>
        </div>

        <div class="friend">
            <img src="https://i.pravatar.cc/40?img=5" class="avatar" />
            <div>
                <span class="username">Kasix</span>
                <span class="status">🎵 The Weeknd +1</span>
            </div>
        </div>

        <!-- PRZYKŁAD AUTOMATYCZNEGO WYŚWIETLANIA Z MODEL -->
        @* 
