@model DiscordClone.Models.UserProfile

<link rel="stylesheet" href="./css/DarkTheme.css" />
<style>
    .profile-settings-container {
        display: flex;
        height: 100vh;
        background: #2f3136;
        color: #fff;
    }

    .profile-sidebar {
        width: 250px;
        background: #202225;
        padding: 20px;
        border-right: 2px solid #18191c;
    }

    .sidebar-title {
        font-size: 20px;
        margin-bottom: 25px;
    }

    .sidebar-btn {
        display: block;
        width: 100%;
        text-align: left;
        padding: 10px;
        margin-bottom: 8px;
        border: none;
        background: #2f3136;
        border-radius: 6px;
        color: white;
        cursor: pointer;
    }

        .sidebar-btn:hover {
            background: #36393f;
        }

        .sidebar-btn.active {
            background: #5865F2;
        }

    .profile-content {
        flex: 1;
        padding: 30px;
    }

    .profile-section {
        display: none;
    }

        .profile-section.active {
            display: block;
        }

    .profile-avatar {
        width: 110px;
        height: 110px;
        border-radius: 50%;
        border: 4px solid #18191c;
        margin-right: 20px;
    }

    .avatar-section {
        display: flex;
        align-items: center;
        margin-bottom: 30px;
    }

    .upload-btn {
        background: #5865F2;
        padding: 10px 14px;
        border-radius: 6px;
        cursor: pointer;
        font-size: 14px;
    }

        .upload-btn input {
            display: none;
        }

    .save-btn {
        background: #3ba55d;
        padding: 10px 18px;
        border: none;
        border-radius: 6px;
        margin-top: 20px;
        color: white;
        cursor: pointer;
    }

</style>



<div class="profile-settings-container">

    <!-- Sidebar -->
    <div class="profile-sidebar">
        <h2 class="sidebar-title">User Settings</h2>

        <button class="sidebar-btn active" data-section="profile">My Profile</button>
        <button class="sidebar-btn" data-section="security">Security</button>
    </div>


    <!-- CONTENT AREA -->
    <div class="profile-content">

        <!-- EDIT PROFILE -->
        <div id="section-profile" class="profile-section active">
        <form asp-action="UserProfileForm" asp-controller="Discord" id="section-profile" class="profile-section active" enctype="multipart/form-data">
            <h3>Edit Profile</h3>

            <div class="avatar-section">
        <img src="@Model.AvatarURL" id="avatarPreview" class="profile-avatar" />
                <label class="upload-btn">
                    Change Avatar
            <input type="file" id="avatarInput" accept="image/*" asp-for="AvatarURL">
                </label>
            </div>

            <label>Username</label>
    <input type="text" id="usernameInput" class="form-control" value="@Model.Username" asp-for="Username">

            <label class="mt-3">Bio</label>
    <textarea id="bioInput" class="form-control" rows="4" asp-for="BIO">@Model.BIO</textarea>

    <button type="submit" class="save-btn" id="saveProfileBtn">Save Profile</button>
    </form>


        <!-- SECURITY -->

    </div>
</div>
<a asp-controller="Discord" asp-action="Index" class="close-page-btn-fixed"><button id="closePageBtn" class="close-page-btn-fixed">✖</button></a>

