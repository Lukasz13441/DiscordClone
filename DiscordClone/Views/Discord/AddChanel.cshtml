@model DiscordClone.Models.Channel

<div class="create-channel-container">

    <div class="create-channel-box">

        <h2 class="title">Create Channel</h2>
        <p class="subtitle">Enter a channel name to create a new text channel.</p>

        <form asp-action="AddChanelForm" class="channel-form">

            <input hidden type="number" asp-for="ServerId" value="@ViewBag.Id" />

            <!-- Channel Name -->
            <label class="input-label">Channel Name</label>
            <div class="input-wrapper">
                <span class="hashtag">#</span>
                <input asp-for="Name" class="channel-input" placeholder="new-channel" autocomplete="off" />
            </div>

            <!-- Buttons -->
            <div class="button-row">
                <a asp-action="Server" asp-route-id="@ViewBag.Id" class="cancel-btn">Cancel</a>
                <button type="submit" class="create-btn">Create Channel</button>
            </div>

        </form>
    </div>

</div>
