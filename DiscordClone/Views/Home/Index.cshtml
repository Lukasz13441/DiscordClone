@{
    ViewData["Title"] = "Home Page";
}

<style>

    .container {
        margin-bottom: 60px;
    }

    .sidebar {
        width: 220px;
        display: flex;
        padding: 20px 10px;
    }

        .sidebar a {
            text-decoration: none;
            padding: 10px 15px;
            border-radius: 5px;
            margin-bottom: 5px;
            display: block;
            color: var(--discord-text);
            font-weight: 500;
        }

            .sidebar a:hover {
                background-color: var(--discord-medium);
                color: var(--discord-blurple);
            }

    .main-content {
        flex: 1;
        padding: 30px;
        overflow-y: auto;
    }

    .card {
        margin-bottom: 20px;
        padding: 20px;
    }

    .hero {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: var(--discord-blurple);
        color: white;
        border-radius: 10px;
        padding: 40px;
        margin-bottom: 30px;
    }

        .hero h1 {
            margin: 0;
            font-size: 2.2rem;
        }

        .hero button {
            font-size: 1rem;
        }
</style>

@if (User.IsInRole("Member"))
{
    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Discord UI</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
        <style>
            /* ===== GLOBAL ===== */
            .main-container {
                margin-bottom: 0px;
            }

            body {
                margin: 0;
                background-color: #202225;
                font-family: "Segoe UI", sans-serif;
                color: #fff;
            }

            .discord-layout {
                display: grid;
                grid-template-columns: 80px 260px 1fr;
                height: 99.8vh;
            }

            /* ===== SERVERS BAR ===== */
            .servers-bar {
                background-color: #202225;
                display: flex;
                flex-direction: column;
                align-items: center;
                padding: 12px 0;
                gap: 14px;
                border-right: 1px solid #1a1b1d;
            }

            .server-icon {
                width: 50px;
                height: 50px;
                background-color: #5865F2;
                border-radius: 50%;
                display: flex;
                justify-content: center;
                align-items: center;
                cursor: pointer;
                font-weight: bold;
                font-size: 18px;
                transition: 0.2s;
            }

                .server-icon:hover {
                    border-radius: 30%;
                    background-color: #4752C4;
                }

                .server-icon.home {
                    background-color: #3BA55D;
                }

            /* ===== CHANNELS BAR ===== */
            .channels-bar {
                background-color: #2f3136;
                display: flex;
                flex-direction: column;
                padding: 10px;
                border-right: 1px solid #1a1b1d;
            }

            .channel-header {
                font-size: 18px;
                font-weight: bold;
                padding: 8px 6px;
                margin-bottom: 10px;
            }

            .channel-section h4 {
                margin: 10px 0 5px;
                font-size: 12px;
                color: #b9bbbe;
                text-transform: uppercase;
            }

            .channel {
                padding: 6px 10px;
                border-radius: 4px;
                cursor: pointer;
                color: #dcddde;
            }

                .channel:hover {
                    background-color: #393c43;
                }

                .channel.selected {
                    background-color: #5865F2;
                }

            .user-panel {
                margin-top: auto;
                padding: 10px;
                background-color: #292b2f;
                border-radius: 6px;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            .user-info {
                display: flex;
                align-items: center;
                gap: 8px;
            }

            .avatar {
                width: 32px;
                height: 32px;
                border-radius: 50%;
            }

            /* ===== CHAT AREA ===== */
            .chat-area {
                background-color: #36393f;
                display: flex;
                flex-direction: column;
            }

            .chat-header {
                padding: 14px;
                font-size: 18px;
                font-weight: bold;
                border-bottom: 1px solid #1a1b1d;
            }

            .messages {
                padding: 20px;
                overflow-y: auto;
                flex-grow: 1;
            }

            .message {
                display: flex;
                gap: 12px;
                margin-bottom: 16px;
            }

            .message-content {
                display: flex;
                flex-direction: column;
            }

            .username {
                font-weight: bold;
                margin-bottom: 2px;
            }

            .text {
                color: #dcddde;
            }

            /* ===== MESSAGE BOX ===== */
            .message-box {
                padding: 15px;
                background-color: #40444b;
            }

                .message-box input {
                    width: 100%;
                    padding: 12px;
                    border-radius: 6px;
                    border: none;
                    font-size: 16px;
                    background-color: #303338;
                    color: white;
                }

        </style>
    </head>

    <body>
        <div class="discord-layout">

            <!-- ===== LEFT: SERVERS LIST ===== -->
            <div class="servers-bar">
                <div class="server-icon home">DC</div>

                <div class="server-icon">A</div>
                <div class="server-icon">B</div>
                <div class="server-icon">C</div>
                <div ac class="server-icon">+</div>
            </div>

            <!-- ===== MIDDLE: CHANNEL LIST ===== -->
            <div class="channels-bar">
                <div class="channel-header">My Server</div>

                <div class="channel-section">
                    <h4>Text Channels</h4>
                    <div class="channel selected"># general</div>
                    <div class="channel"># memes</div>
                    <div class="channel"># coding</div>
                </div>

                <div class="channel-section">
                    <h4>Voice Channels</h4>
                    <div class="channel">🔊 Lounge</div>
                    <div class="channel">🔊 Gaming</div>
                </div>

                <div class="user-panel">
                    <div class="user-info">
                        <img src="https://i.pravatar.cc/40" class="avatar" />
                        <span>YourUser</span>
                    </div>
                    <i class="fa-solid fa-gear"></i>
                </div>
            </div>

            <!-- ===== RIGHT: CHAT AREA ===== -->
            <div class="chat-area">
                <div class="chat-header"># general</div>

                <div class="messages">
                    <div class="message">
                        <img src="https://i.pravatar.cc/40?img=3" class="avatar">
                        <div class="message-content">
                            <span class="username">Alice</span>
                            <span class="text">Hey, welcome to the server!</span>
                        </div>
                    </div>

                    <div class="message">
                        <img src="https://i.pravatar.cc/40?img=5" class="avatar">
                        <div class="message-content">
                            <span class="username">Bob</span>
                            <span class="text">This layout looks cool 👀</span>
                        </div>
                    </div>
                </div>

                <div class="message-box">
                    <input type="text" placeholder="Message #general" />
                </div>
            </div>
        </div>
    </body>
    </html>

}
else
{
    <div class="sidebar">
    <h2>Discord</h2>
    <a asp-page="/Index">Home</a>
    <a asp-page="/Servers">Servers</a>
    <a asp-page="/Friends">Friends</a>
</div>

<div class="main-content">

    <!-- Hero Section -->
    <div class="hero">
        <div>
            <h1>Welcome to Your Discord Clone</h1>
            <p>Connect, chat, and hang out with your friends.</p>
            <a asp-page="/Register" class="btn btn-primary">Get Started</a>
        </div>
        <div>
            <img src="~/images/logo.png" alt="Discord Illustration" width="200">
        </div>
    </div>

    <!-- Cards Section -->
    <div class="card">
        <h3>Join a Server</h3>
        <p>Discover communities that share your interests.</p>
        <a asp-page="/Servers" class="btn btn-secondary">Explore</a>
    </div>

    <div class="card">
        <h3>Start Chatting</h3>
        <p>Connect instantly with friends via text, voice, or video.</p>
        <a asp-page="/Chat" class="btn btn-secondary">Open Chat</a>
    </div>

</div>
}




